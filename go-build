#!/bin/bash

set -e

if [ -f /gopath/src/app/Godeps ]; then
    go get github.com/kr/godep
fi

if [ -f /gopath/src/app/.godir ]; then
    GODIR=$(cat /gopath/src/app/.godir)
    mkdir -p /gopath/src/$(dirname ${GODIR})
    ln -s /gopath/src/app /gopath/src/${GODIR}
    cd /gopath/src/${GODIR}
else
    cd /gopath/src/app
fi

if [ -f /gopath/src/app/Godeps ]; then
    godep go install
else
    go get
fi
